generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  courses   Course[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Course {
  id          Int      @id @default(autoincrement())
  title       String
  uploader    String
  description String?
  filePath    String?
  thumbnail   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  author      User     @relation(fields: [authorId], references: [id])
  authorId    Int
}

model Team {
  id        Int      @id @default(autoincrement())
  name      String
  position  Position
  picture   String?
  skills    Skill[]  @relation("TeamSkills")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Skill {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  teams   Team[]   @relation("TeamSkills")
}

enum Position {
  MENTOR
  SINARIDESA_TEAM
}

model Event {
  id           Int      @id @default(autoincrement())
  title        String
  description  String?
  date         DateTime
  location     String
  participants Int
  thumbnail    String
  image        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
